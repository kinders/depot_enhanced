<div class="depot_form">
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> 您的信息因为如下原因不能保存：</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <legend>输入用户名和密码</legend>

  <div>
    <%= f.label :name, '用户名' %><br>
    <%= f.text_field :name, size: 40 %>
  </div>

  <% if params[:action] == 'edit' || params[:action] == 'update' %> 
  <div>
    <%= f.label :current_password, '旧密码' %>
    <%= f.password_field :current_password, size: 40 %>
  </div>
  <% end %>

  <div>
    <%= f.label :password, '密码' %><br>
    <%= f.password_field :password, size: 40 %>
  </div>
  <div>
    <%= f.label :password_confirmation, '密码确认'%><br>
    <%= f.password_field :password_confirmation, size: 40 %>
  </div>
  <div>
    <%= f.submit '提交资料'%>
  </div>
  </fieldset>
<% end %>
