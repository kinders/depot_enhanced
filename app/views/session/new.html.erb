<div class="depot_form">
  <% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
  <% end %>
  <%= form_tag do %>
    <fieldset>
      <legend>登录系统</legend>
      <div>
        <%= label_tag :name, '用户名' %>
        <%= text_field_tag :name, params[:name] %>
      </div>
      <div>
        <%= label_tag :password, '密码' %>
        <%= password_field_tag :password, params[:password] %>
      </div>
      <div>
        <%= submit_tag "登录" %>
      </div>
      <div>
        <%= link_to '注册一个新用户', new_user_path %>
      </div>
    </fieldset>
  <% end %>
</div>
