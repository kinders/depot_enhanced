<h1>Listing ships</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Send date</th>
      <th>Sender</th>
      <th>Express company</th>
      <th>Express number</th>
      <th>Is receive</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ships.each do |ship| %>
      <tr>
        <td><%= ship.order %></td>
        <td><%= ship.send_date %></td>
        <td><%= ship.sender %></td>
        <td><%= ship.express_company %></td>
        <td><%= ship.express_number %></td>
        <td><%= ship.is_receive %></td>
        <td><%= link_to 'Show', ship %></td>
        <td><%= link_to 'Edit', edit_ship_path(ship) %></td>
        <td><%= link_to 'Destroy', ship, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

